{
  "name": "@thebespokepixel/string",
  "version": "0.3.0",
  "description": "Esoteric string formatting",
  "main": "index.js",
  "jsnext:main": "lib/index-es6.js",
  "dependencies": {
    "boxen": "^0.6.0",
    "term-ng": "*"
  },
  "devDependencies": {
    "@thebespokepixel/cordial": "*"
  },
  "scripts": {
    "test": "xo && ava"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MarkGriffiths/string.git"
  },
  "files": [
    "index.js",
    "lib/*"
  ],
  "keywords": [
    "cli",
    "string",
    "unicode",
    "utf8",
    "pad",
    "superscript",
    "subscript"
  ],
  "author": "Mark Griffiths <mark@thebespokepixel.com> (http://thebespokepixel.com/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/MarkGriffiths/string/issues"
  },
  "homepage": "https://github.com/MarkGriffiths/string#readme",
  "xo": {
    "ignores": [
      "lib/*.js"
    ],
    "semicolon": false,
    "esnext": true
  },
  "ava": {
    "verbose": true,
    "files": [
      "test/*.js"
    ]
  },
  "buildNumber": 4,
  "engines": {
    "node": ">=4.0 <7.0"
  }
}
